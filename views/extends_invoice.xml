<openerp>
    <data>
        
        <record id="invoice_form_inherited"  model="ir.ui.view">
            <field name="name">Extension Invoice form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="l10n_ar_afipws_fe.view_invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <button string="Imprimir factura" name="invoice_print" type="object"/>
                    <button string="Actualizar asiento" name="update_date_move" type="object"/>
                </xpath>
                <xpath expr="//field[@name='fiscal_position_id']" position='after'>
                    <!-- afip_message -->
                    <field name="json_qr"/>
                    <field name="texto_modificado_qr"/>
                    <field name="qr" widget="image" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>
                </xpath>
            </field>
        </record>
        
        <!-- Acci칩n de servidor -->
        <record id="action_bulk_update_invoice_dates" model="ir.actions.server">
            <field name="name">Actualizar fechas de asiento</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="state">code</field>
            <!-- Opci칩n A: llamar al wrapper del modelo -->
            <field name="code">
                action = env['account.invoice'].browse(context.get('active_ids', [])).action_bulk_update_date_move()
            </field>
            <!--
            Opci칩n B (directo, si no cre치s el wrapper):
            <field name="code">
            for inv in env['account.invoice'].browse(context.get('active_ids', [])):
            inv.update_date_move()
            </field>
            -->
        </record>
        
        <!-- En Odoo 9 el binding a la vista lista se hace con ir.values -->
        <record id="action_bulk_update_invoice_dates_value" model="ir.values">
            <field name="name">Actualizar fechas de asiento</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.server,%d' % ref('your_module_name.action_bulk_update_invoice_dates')"/>
        </record>
        
    </data>
</openerp>